KDIR=${KDIR:-/lib/modules/`uname -r`/build}

make -C ${KDIR} M=$(pwd) modules > /dev/null 2>&1

if [ $? -eq 0 ] ; then
    echo "#define HAVE_FOPS_FADVISE 1"
else
    echo "#define HAVE_FOPS_FADVISE 0"
fi

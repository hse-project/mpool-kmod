PROG=${0##*/}
PKG=$(basename ${0%.*})

echo "${PROG} [$*]"

case $1 in
    remove|purge)
        depmod -A
        ;;

    abort-upgrade)
        modprobe mpool ||:
        ;;

    *)
esac

exit 0
